---
// src/components/ProjectCard.astro
const { title, description, tags, link } = Astro.props;
---
<div class="project-card bg-background border-2 border-text/20 p-6 rounded-main shadow-solid transition-all duration-300 
hover:-translate-y-2 flex flex-col">
  <div class="flex-grow">
    <h3 class="text-xl font-bold text-primary mb-2">{title}</h3>
    <p class="text-text/80 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-6">
      {tags.map((tag: string) => (
        <span class="bg-accent/20 text-accent font-semibold text-xs py-1 px-3 rounded-btn">{tag}</span>
      ))}
    </div>
  </div>
  <a href={link} class="font-bold text-primary hover:underline self-start">Ver m√°s &rarr;</a>
</div>